{
  "name": "@xystack/up",
  "version": "0.0.0",
  "description": "Interactive CLI to check and upgrade globally installed packages",
  "type": "module",
  "keywords": [
    "cli",
    "update",
    "upgrade",
    "global",
    "packages",
    "npm",
    "pnpm",
    "yarn",
    "bun"
  ],
  "license": "MIT",
  "homepage": "https://github.com/xinyao27/up#readme",
  "bugs": {
    "url": "https://github.com/xinyao27/up/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xinyao27/up.git"
  },
  "author": {
    "name": "xinyao",
    "email": "hi@xinyao.me"
  },
  "funding": "https://github.com/sponsors/xinyao27",
  "bin": {
    "up": "./dist/index.mjs"
  },
  "files": ["dist/*"],
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": "./dist/index.mjs",
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "scripts": {
    "build": "tsdown",
    "typecheck": "tsc --noEmit",
    "lint": "biome check --write --unsafe ./src && nr typecheck",
    "prepublishOnly": "nr build",
    "release": "release-it",
    "start": "bun run src/index.ts",
    "test": "bun test",
    "up": "taze major -I",
    "prepare": "simple-git-hooks"
  },
  "devDependencies": {
    "@antfu/ni": "^28.0.0",
    "@biomejs/biome": "^2.3.9",
    "@release-it/conventional-changelog": "^10.0.3",
    "@types/bun": "^1.3.4",
    "lint-staged": "^16.2.7",
    "publint": "^0.3.16",
    "release-it": "^19.1.0",
    "simple-git-hooks": "^2.13.1",
    "taze": "^19.9.2",
    "tsdown": "^0.18.0",
    "typescript": "^5.9.3"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": "biome check --write --unsafe --files-ignore-unknown=true"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "picocolors": "^1.1.1"
  }
}
