{
  "name": "@xinyao27/up",
  "version": "0.1.0",
  "description": "Interactive CLI to check and upgrade globally installed packages",
  "type": "module",
  "keywords": [
    "cli",
    "update",
    "upgrade",
    "global",
    "packages",
    "npm",
    "pnpm",
    "yarn",
    "bun"
  ],
  "license": "MIT",
  "homepage": "https://github.com/xinyao27/up#readme",
  "bugs": {
    "url": "https://github.com/xinyao27/up/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xinyao27/up.git"
  },
  "author": {
    "name": "xinyao",
    "email": "hi@xinyao.me"
  },
  "funding": "https://github.com/sponsors/xinyao27",
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "up": "./src/index.ts"
  },
  "files": ["src/*"],
  "sideEffects": false,
  "scripts": {
    "typecheck": "tsc --noEmit",
    "lint": "biome check --write --unsafe ./src && nr typecheck",
    "start": "bun run src/index.ts",
    "test": "bun test",
    "up": "taze major -I",
    "prepare": "simple-git-hooks"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/bun": "^1.3.5",
    "lint-staged": "^16.2.7",
    "simple-git-hooks": "^2.13.1",
    "taze": "^19.9.2",
    "typescript": "^5.9.3"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": "biome check --write --unsafe --no-errors-on-unmatched --files-ignore-unknown=true"
  },
  "dependencies": {
    "kly": "^0.3.0",
    "zod": "^4.2.1"
  }
}
