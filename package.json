{
  "name": "@xinyao27/up",
  "version": "0.1.0",
  "description": "Interactive CLI to check and upgrade globally installed packages",
  "keywords": [
    "bun",
    "cli",
    "global",
    "npm",
    "packages",
    "pnpm",
    "update",
    "upgrade",
    "yarn"
  ],
  "homepage": "https://github.com/xinyao27/up#readme",
  "bugs": {
    "url": "https://github.com/xinyao27/up/issues"
  },
  "license": "MIT",
  "author": {
    "name": "xinyao",
    "email": "hi@xinyao.me"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xinyao27/up.git"
  },
  "funding": "https://github.com/sponsors/xinyao27",
  "bin": {
    "up": "./src/index.ts"
  },
  "files": [
    "src/*"
  ],
  "type": "module",
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "lint": "nr typecheck && oxlint && oxfmt",
    "start": "bun run src/index.ts",
    "test": "bun test",
    "up": "taze major -I",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "kly": "latest",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/bun": "^1.3.5",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.21.0",
    "oxlint": "^1.36.0",
    "simple-git-hooks": "^2.13.1",
    "taze": "^19.9.2",
    "typescript": "^5.9.3"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": "oxlint && oxfmt"
  }
}
